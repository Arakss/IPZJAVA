<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.image.*?>
<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="tlo" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="300.0" stylesheets="@style.css" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ipz.Edycja">
   <children>
      <GridPane AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="20.0">
         <children>
            <TextField fx:id="imie" onAction="#ok" style="-fx-border-color: black;" GridPane.columnIndex="1">
               <tooltip>
                  <Tooltip text="Podaj swoje Imię" />
               </tooltip>
            </TextField>
            <TextField fx:id="nazwisko" onAction="#ok" style="-fx-border-color: black;" GridPane.columnIndex="1" GridPane.rowIndex="1">
               <tooltip>
                  <Tooltip text="Podaj swoje Nazwisko" />
               </tooltip>
            </TextField>
            <TextField fx:id="login" onAction="#ok" style="-fx-border-color: black;" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <tooltip>
                  <Tooltip text="Login którym będziesz się poslugiwać" />
               </tooltip>
            </TextField>
            <TextField fx:id="email" onAction="#ok" style="-fx-border-color: black;" GridPane.columnIndex="1" GridPane.rowIndex="3">
               <tooltip>
                  <Tooltip text="E-mail kontaktowy" />
               </tooltip>
            </TextField>
            <PasswordField fx:id="haslo" onAction="#ok" style="-fx-border-color: black;" GridPane.columnIndex="1" GridPane.rowIndex="4">
               <tooltip>
                  <Tooltip text="Twoje hasło (minimum 6 znaków)" />
               </tooltip>
            </PasswordField>
            <Label text="Imię" textFill="WHITE" />
            <Label text="Nazwisko" textFill="WHITE" GridPane.rowIndex="1" />
            <Label text="Login" textFill="WHITE" GridPane.rowIndex="2" />
            <Label text="E-mail" textFill="WHITE" GridPane.rowIndex="3" />
            <Label text="Hasło" textFill="WHITE" GridPane.rowIndex="4" />
            <Label text="Rola" textFill="WHITE" GridPane.rowIndex="5" />
            <ComboBox fx:id="rola" prefWidth="150.0" style="-fx-border-color: black;" GridPane.columnIndex="1" GridPane.rowIndex="5" />
            <ImageView fx:id="imageImie" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" />
            <ImageView fx:id="imageNazwisko" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" GridPane.rowIndex="1" />
            <ImageView fx:id="imageLogin" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" GridPane.rowIndex="2" />
            <ImageView fx:id="imageEmail" fitHeight="32.0" fitWidth="32.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="2" GridPane.rowIndex="3" />
         </children>
         <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
            <RowConstraints minHeight="10.0" vgrow="SOMETIMES" />
         </rowConstraints>
      </GridPane>
      <HBox AnchorPane.bottomAnchor="5.0" AnchorPane.rightAnchor="5.0">
         <children>
            <Button mnemonicParsing="false" onAction="#ok" prefWidth="70.0" text="OK" />
            <Button mnemonicParsing="false" onAction="#anuluj" prefWidth="70.0" text="Anuluj" />
         </children>
      </HBox>
   </children>
</AnchorPane>
